<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corners"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_x_button_2_foreground" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ustawienia"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textSize="32sp"
        android:textColor="@color/black"
        android:textStyle="bold"

        android:layout_marginBottom="10dp"
        />


    <TextView
        android:id="@+id/passwordChange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Zmiana hasła"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/haslo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_corners"
        android:gravity="center"
        android:hint="Hasło"
        android:inputType="textPassword"
        android:padding="5dp"
        android:textAlignment="center"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/potwierdzHaslo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_corners"
        android:gravity="center"
        android:hint="Potwierdź hasło"
        android:inputType="textPassword"
        android:padding="5dp"
        android:textAlignment="center"
        android:textColor="@color/black" />

    <include
        android:id="@+id/buttonPotwierdzHaslo"
        layout="@layout/rounded_centered_button_orange" />

    <TextView
        android:id="@+id/loginChange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:text="Zmiana loginu"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_corners"
        android:gravity="center"
        android:hint="Nowy login"
        android:padding="5dp"
        android:textAlignment="center"
        android:textColor="@color/black" />

    <include
        android:id="@+id/buttonPotwierdzLogin"
        layout="@layout/rounded_centered_button_orange" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

</LinearLayout>