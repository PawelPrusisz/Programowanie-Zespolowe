<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="lobby_settings_label">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="lobby_settings_input">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/rounded_corners_green_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="lobby_settings_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/green_dark</item>
    </style>

    <style name="lobby_settings_radio_button">
        <item name="android:layout_width">140dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/radio_button_base</item>
        <item name="android:button">@drawable/radio_button_base</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="lobby_setting_suffix_input_container">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/rounded_corners_green_dark</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="lobby_settings_suffix_input">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.4</item>
        <item name="android:background">@null</item>
        <item name="android:ems">0</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingEnd">6dp</item>
    </style>

    <style name="lobby_settings_suffix_input_suffix">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.6</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="lobby_text_in_box">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="lobby_regular_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
    </style>


    <style name="button">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="button_green">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/green_light</item>
    </style>

    <style name="button_orange">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/orange_light</item>
    </style>
</resources>